<Window x:Class="Ящик.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ящик"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        mc:Ignorable="d"
        Title="ящик" Height="450" Width="775" Icon="/icon.ico"
        StateChanged="MainWindow_OnStateChanged">

    <Grid>
        <Image x:Name="image" VerticalAlignment="Stretch" Source="/background.jpg" Stretch="Fill"
               HorizontalAlignment="Stretch" />
        <TextBlock x:Name="textBlock" HorizontalAlignment="Stretch" Text="Хочешь сыграть? Как мило с твоей стороны!"
                   TextWrapping="Wrap" VerticalAlignment="Center" FontSize="48" TextAlignment="Center"
                   Foreground="White">
            <TextBlock.Background>
                <SolidColorBrush Color="Black" Opacity="0.5" />
            </TextBlock.Background>
        </TextBlock>
        <tb:TaskbarIcon x:Name="TrayIcon"
                        Visibility="Hidden"
                        IconSource="/icon.ico"
                        ToolTipText="ящик"
                        TrayLeftMouseDown="TrayIcon_TrayLeftMouseDown" />
    </Grid>
</Window>